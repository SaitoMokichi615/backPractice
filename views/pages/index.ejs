<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body>
  <!-- Header -->
  <%- include('../partials/header'); %>
  <!-- Header -->

  <!-- Overlay -->
  <%- include('../partials/overlay'); %>
  <!-- Overlay -->

  <!-- Main -->
  <main class="wrapper">
    <% if(products){ %>
    <div class="grid">    
      <% for(let product of products){ %>
      <!-- Product -->
      <div class="item">
        <a href="/item?id=<%= product.id %>">            
          <div class="image">
            <% if(product.exitImage){%>
              <img src="/uploads/<%= product.imagePath %>.jpg" alt="<%= product.name %>">
            <% } else {%>
              <img src="/images/noimage760x460.png" alt="<%= product.name %>">
            <% } %>
          </div>
          <p><%= product.name %></p>
          <p>&yen;<%= product.price.toLocaleString() %> + tax</p>
        </a>
      </div>
      <!-- Product -->
      <% } %>
    </div>
    <% } %>
    <div class="link-products">
      <a href="/products">View More</a>
    </div>
  </main>
  <!-- Main -->

  <!-- Footer -->
  <%- include('../partials/footer'); %>
  <!-- Footer -->

  <!-- JavaScript -->
  <script src="/javascripts/common.js"></script>
  <!-- JavaScript -->
</body>
</html>